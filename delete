// Initialize the correctAnswers variable
let correctAnswers = 0;

// Check if there's a stored correctAnswers value in localStorage
if (localStorage.getItem("correctAnswers")) {
  correctAnswers = parseInt(localStorage.getItem("correctAnswers"));
} else {
  // If no value is found in localStorage, set the initial correctAnswers value
  localStorage.setItem("correctAnswers", correctAnswers);
}

// Function to update and store the correctAnswers value in localStorage
function updateCorrectAnswers(value) {
  correctAnswers += value;
  localStorage.setItem("correctAnswers", correctAnswers);
}
